<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    card_view:cardCornerRadius="1dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            card_view:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/Face"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/First"
            android:textSize="18sp"
            android:typeface="sans"
            android:textColor="@android:color/black"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignTop="@+id/Face"
            android:layout_toRightOf="@+id/Face"
            android:layout_toEndOf="@+id/Face" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/Last"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_alignBaseline="@+id/First"
            android:layout_alignBottom="@+id/First"
            android:layout_toRightOf="@+id/First"
            android:layout_toEndOf="@+id/First" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Email"
            android:layout_below="@+id/First"
            android:layout_alignLeft="@+id/First"
            android:layout_alignStart="@+id/First"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/cardview_shadow_start_color"
        android:layout_height="10dp"/>

</android.support.v7.widget.CardView>
